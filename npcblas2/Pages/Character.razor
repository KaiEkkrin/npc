@page "/character/{Id}"
@attribute [Authorize]

@using Npc
@using Npc.Attributes
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ICharacterBuildService BuildService

<div class="container">
    <div class="row">
        <h2>@Model.Name</h2>
    </div>
    <div class="row">
        @if (Prompt != null)
        {
            <div class="col col-md-6">
                <p><strong>@Prompt.Prompt</strong></p>
                <ul class="list-group">
                    @foreach (var choice in Prompt.Choices)
                    {
                        <ChoiceView Model=@choice OnChosen=@OnChosen />
                    }
                </ul>
            </div>
            <div class="col col-md-6">
                <CharacterSheetView Sheet=@Sheet />
            </div>
        }
        else
        {
            <CharacterSheetView Sheet=@Sheet />
        }
    </div>
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    public CharacterBuildModel Model { get; set; }

    private PromptModel Prompt { get; set; }

    private IEnumerable<CharacterSubHeading> Sheet { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var model = await BuildService.GetAsync(authState.User, Id);
        Update(model);
    }

    private async Task OnChosen(int index)
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var model = await BuildService.BuildAsync(authState.User, Model, index);
        Update(model);
    }

    private void Update(CharacterBuildModel model)
    {
        Model = model;
        Prompt = PromptModel.CanCreate(Model.BuildOutput) ? PromptModel.Create(Model.BuildOutput) : null;
        Sheet = CharacterSheet.create(Model.BuildOutput.Character);
    }
}