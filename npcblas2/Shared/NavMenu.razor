<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="/">
        <img src="logo2.svg" alt="pf2npc" />
    </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="public">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Public
            </NavLink>
        </li>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="mycharacters">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> My Characters
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="exportimport">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Export / Import
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <WithPermission Value=@ApplicationClaimValue.Admin>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Admin
                </NavLink>
            </li>
        </WithPermission>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
